<div class="row justify-content-center">
  <div class="col-md-6">
    <table class="table">
      <h2><%= "Tag search for \"#{@word}\"" %></h2>
      <thaed>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thaed>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to(book.user) do %>
                <%= image_tag book.user.get_profile_image, size:'50x50' %>
              <% end %>
            </td>
            <td><%= link_to book.title,book %></td>
            <td><%= book.body %></td>
            <td><%= book.tag %></td>
            <td><%= render "favorites/btn", book: book %></td>
            <td>コメント数：<%= book.book_comments.count %></td>
            <td><%= render "books/static", book: book %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div>
</div>